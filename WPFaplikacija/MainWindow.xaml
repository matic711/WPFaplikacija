<Window x:Class="WPFaplikacija.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prijava"
        Height="500"
        Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        WindowState="Maximized"
        WindowStyle="None">

    <Window.Resources>
        <ImageBrush x:Key="WindowBackground" ImageSource="/Images/background.jpg"/>
        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Arial Black"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FF4B4B"/>
                    <Setter Property="Background" Value="#222"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Foreground" Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Window.Background>
        <StaticResource ResourceKey="WindowBackground"/>
    </Window.Background>

    <Grid>
        <Button Content="✖"
        Style="{StaticResource FlatButton}"
        Width="40"
        Height="40"
        FontSize="20"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="10"
        Click="CloseButton_Click"/>

        <StackPanel Width="250"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Text="Ime"
                       FontSize="16"
                       Foreground="White"
                       FontFamily="Arial Black"
                       Margin="0,0,0,4"/>
            <TextBox x:Name="tb1"
                     Height="28"
                     FontSize="22"
                     VerticalContentAlignment="Center"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Geslo"
                       FontSize="16"
                       Foreground="White"
                       FontFamily="Arial Black"
                       Margin="0,0,0,4"/>
            <PasswordBox x:Name="tb2"
                         Height="28"
                         Margin="0,0,0,20"
                        FontSize="22"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0">
                <Button x:Name="btn1"
                        Content="Prijava"
                        Width="100"
                        Height="30"
                        Margin="0,0,10,0"
                        Click="btn1_Click"
                        Background="White"
                        FontFamily="Arial Black"/>
                <Button x:Name="btn2"
                        Content="Registracija"
                        Width="100"
                        Height="30"
                        Click="btn1_Click"
                        Background="White"
                        FontFamily="Arial Black"/>
            </StackPanel>

            <Label x:Name="opozorilo"
                   Content="Pozdravljeni, če ste nov uporabnik se prosim registrirajte!"
                   FontSize="12"
                   FontFamily="Arial Black"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"
                   Background="Transparent"/>
        </StackPanel>
    </Grid>
</Window>
