<Window x:Class="WPFaplikacija.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registracija"
        Height="480" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ImageBrush x:Key="WindowBackground" ImageSource="Images/background.jpg"/>
    </Window.Resources>

    <Window.Background>
        <StaticResource ResourceKey="WindowBackground"/>
    </Window.Background>

    <Grid>
        <StackPanel Width="250"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">

            <Label Content="Email" Foreground="White" FontSize="16" FontFamily="Arial Black"/>
            <TextBox x:Name="tbEmail" Height="30"/>

            <Label Content="Ime" Foreground="White" FontSize="16" FontFamily="Arial Black" Margin="0,10,0,0"/>
            <TextBox x:Name="tbName" Height="30"/>

            <Label Content="Geslo" Foreground="White" FontSize="16" FontFamily="Arial Black" Margin="0,10,0,0"/>
            <PasswordBox x:Name="tbPassword" Height="30"/>

            <Label Content="Ponovno upišite geslo" Foreground="White" FontSize="16" FontFamily="Arial Black" Margin="0,10,0,0"/>
            <PasswordBox x:Name="tbPasswordRepeat" Height="30"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="btnRegister" Content="Prijava" Width="100" Height="30" Margin="0,0,10,0" Click="btn1_Click"/>
                <Button x:Name="btnReturn" Content="Nazaj" Width="100" Height="30" Click="btnReturn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
