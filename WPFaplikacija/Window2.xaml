<Window x:Class="WPFaplikacija.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFaplikacija"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="400"
        ResizeMode="NoResize">


    <Window.Resources>
        <ImageBrush x:Key="WindowBackground" ImageSource="Images/background.jpg"/>
    </Window.Resources>
    <Window.Background>
        <StaticResource ResourceKey="WindowBackground"/>
    </Window.Background>

    <Grid HorizontalAlignment="Right" Width="400">
        <Button x:Name="btn1" Content="submit" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btn1_Click" Margin="49,334,0,0" />
        <Label  x:Name="ime" Content="Ime" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="49,129,0,0" FontSize="16" Foreground="White" FontFamily="Arial Black"/>
        <TextBox x:Name="tb1" Width="200" Height="33" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="49,165,0,0" RenderTransformOrigin="0.478,2.585"/>
        <Label x:Name="geslo" Content="Geslo" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,198,0,0" FontSize="16" Foreground="white" RenderTransformOrigin="0.462,2.789" FontFamily="Arial Black"/>
        <TextBox x:Name="tb2" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="49,234,0,0"/>
        <Label x:Name="email" Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,54,0,0" FontSize="16" Foreground="white" RenderTransformOrigin="0.329,1.734" FontFamily="Arial Black"/>
        <Label x:Name="geslo2" Content="Ponovno upišite geslo" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="49,264,0,0" FontSize="16" Foreground="White" FontFamily="Arial Black"/>
        <PasswordBox x:Name="tb3" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="49,296,0,0"/>
        <PasswordBox x:Name="tb4" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="49,99,0,0"/>
    </Grid>
</Window>
